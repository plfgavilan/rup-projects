@startuml
!include skinParams.puml

    'analysis
    package analysis {
        boundary XView #9FB7E5
        control XController #C4E4AB
        entity XEntity #F8D987
        entity XDao #F8D987

        XView -down-> XController
        XView -down-> XEntity
        XController .down.> XEntity
        XController -down-> XDao
    }
    'Design
    package front <<angular:10>>{

        rectangle presentation {
            rectangle xComponent {
               boundary XTemplate <<HTML>>
               boundary XStyle <<CSS>>
               boundary XComponent <<TypeScript>>
            }
            control HTTPService
            control XServiceImp <<TypeScript>>
            entity XDaoImpl
        }




        entity XDao <<TypeScript>>

        rectangle logic {
            control XService <<TypeScript>>
            entity XModel
            entity XTSDao as "XDao"
        }


        XComponent -down-> XServiceImp
        XComponent -right-> XModel
        XServiceImp --|> XService
        XDaoImpl ..|> XTSDao
        XDaoImpl --> HTTPService
        XServiceImp ..> XDaoImpl
        XService ..> XTSDao
        XService --> XModel
        XTSDao -down--> XModel
        XTemplate -down- XComponent
        XTemplate -right-> XStyle
    }

    package backend <<spring:5.3>> {
        control XResource
        control XBService
        entity XRepository
        entity XDto
        entity XBEntity
        XResource --> XBService
        XResource --> XDto
        XBService --> XBEntity
        XBService --> XDto
        XBService --> XRepository
        XRepository --> XBEntity
    }


    XController <.[#Gray].. XResource: <<trace>>
    XController <.[#Gray].. XBService : <<trace>>

    XDao <.[#Gray].. XRepository: <<trace>>

    XEntity <.[#Gray].. XDto : <<trace>>
    XEntity <.[#Gray].. XBEntity: <<trace>>
    XEntity <.[#Gray].. XModel: <<trace>>

    XController <.[#Gray].. XService <<trace>>
    XView <.[#Gray].. XComponent
    XView <.[#Gray].. XStyle
    XView <.[#Gray].. XTemplate
    XDao <.[#Gray].. XTSDao: <<trace>>
@enduml
