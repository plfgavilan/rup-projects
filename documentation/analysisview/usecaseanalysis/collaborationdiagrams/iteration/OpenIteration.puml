@startuml

!include ../configuration/skinParams.puml
!include ../configuration/definitions.puml

actor user
view IterationsView
view IterationView

controller OpenIterationController
model IterationDao
model Iteration

user -right->IterationsView
    note on link
        openIteration(iterationId)
    end note
IterationsView -down-> IterationView
    note on link
        new IterationsView(iterationId)
    end note
IterationView -right-> OpenIterationController
    note on link
        get(iterationId)
    end note
OpenIterationController -right-> IterationDao
    note on link
        get(iterationId)
    end note

OpenIterationController .down.> Iteration
IterationView .down.> Iteration
IterationDao .down.> Iteration

@enduml

